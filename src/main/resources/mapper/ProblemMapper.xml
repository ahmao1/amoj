<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="amoj.dao.ProblemDao" >

    <select id="allProblems" parameterType="map" resultMap="amoj.entity.Problem">
        select * from problem
    </select>

    <select id="findProblemById" parameterType="map" resultMap="amoj.entity.Problem">
        SELECT * from problem where problem_id = #{problemId}
    </select>

    <insert id="addProblem">
        insert into problem(keywords,tags) values (#{author} ,#{tags})
    </insert>

    <update id="updateProblemById">
        update problem
        <trim prefix="set" suffixOverrides=",">
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="paragraphsSp != null and paragraphsSp != ''">
                paragraphs_sp = #{paragraphsSp},
            </if>
        </trim>
        where problem_id=#{ProblemId}
    </update>

    <delete id="deleteProblemById" parameterType="long">
        delete * from problem where  problem_id = #{problemId}
    </delete>
</mapper>